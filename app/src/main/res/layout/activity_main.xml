<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lux.calculatrice.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/promptField"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/key_equal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/promptField"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.25" />

        <GridLayout
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:id="@+id/keyLayout"
            app:layout_constraintRight_toLeftOf="@+id/key_equal"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/key_equal"
            app:layout_constraintBottom_toBottomOf="@+id/key_equal"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:text="8"
                android:layout_width="79dp"
                android:id="@+id/key_8"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_height="99dp" />

            <Button
                android:text="9"
                android:id="@+id/key_9"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="79dp"
                android:layout_height="99dp" />

            <Button
                android:text="5"
                android:layout_width="79dp"
                android:id="@+id/key_5"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_height="99dp" />

            <Button
                android:text="2"
                android:layout_width="79dp"
                android:id="@+id/key_2"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_height="99dp" />

            <Button
                android:text="3"
                android:id="@+id/key_3"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="79dp"
                android:layout_height="99dp" />

            <Button
                android:text="-"
                android:layout_width="79dp"
                android:id="@+id/key_minus"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_height="99dp" />

            <Button
                android:text="0"
                android:layout_width="79dp"
                android:id="@+id/key_0"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_height="99dp" />

            <Button
                android:text="+"
                android:layout_width="79dp"
                android:id="@+id/key_plus"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_height="99dp" />

            <Button
                android:text="7"
                android:id="@+id/key_7"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="79dp"
                android:layout_height="99dp" />

            <Button
                android:text="1"
                android:id="@+id/key_1"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="79dp"
                android:layout_height="99dp" />

            <Button
                android:text="4"
                android:layout_width="79dp"
                android:id="@+id/key_4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_height="99dp" />

            <Button
                android:text="6"
                android:layout_width="79dp"
                android:id="@+id/key_6"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_height="99dp" />

        </GridLayout>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
